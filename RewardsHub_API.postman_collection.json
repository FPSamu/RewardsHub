		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register Business",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set(\"business_token\", jsonData.token);",
									"    pm.environment.set(\"business_id\", jsonData.business.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Mi Negocio de Prueba\",\n  \"email\": \"negocio@test.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/business/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"business",
								"register"
							]
						}
					}
				},
