								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{business_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Sistema de Puntos Actualizado\",\n  \"pointsConversion\": {\n    \"amount\": 20,\n    \"currency\": \"MXN\",\n    \"points\": 2\n  }\n}"
