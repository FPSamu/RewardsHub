# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/rewardshub?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (comma-separated list of allowed origins)
# Example for Vercel deployment:
ALLOWED_ORIGINS=https://rewards-hub-opal.vercel.app,https://www.rewards-hub-opal.vercel.app

# Email Configuration (Nodemailer)
# Option 1: Gmail (recommended for development)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Option 2: Outlook/Hotmail
# EMAIL_SERVICE=outlook
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASSWORD=your-password
# EMAIL_FROM=your-email@outlook.com

# Option 3: Custom SMTP Server
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-password
# EMAIL_FROM=your-email@example.com

# Frontend URL (for email verification links)
FRONTEND_URL=https://rewards-hub-opal.vercel.app

# MongoDB Collection Names (optional - uses defaults if not set)
USER_COLLECTION=users
BUSINESSES_COLLECTION=businesses
SYSTEMS_COLLECTION=systems
REWARDS_COLLECTION=rewards
USERS_POINTS_COLLECTION=userPoints
TRANSACTIONS_COLLECTION=transactions
